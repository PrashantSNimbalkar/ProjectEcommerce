@model EcommerceProject.Models.User

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>            
            <div class="form-group">
                <label asp-for="u_email" class="control-label"></label>
                <input asp-for="u_email" class="form-control" />
                <span asp-validation-for="u_email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="u_password" class="control-label"></label>
                <input asp-for="u_password" class="form-control" />
                <span asp-validation-for="u_password" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <input type="submit" value="submit" class="btn btn-primary" />
            </div>
          
        </form>
    </div>
</div>
<div>
    <a asp-action="Register">Register</a>
</div>

