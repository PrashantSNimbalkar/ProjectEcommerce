@model IEnumerable<EcommerceProject.Models.Cart>

@{
    ViewData["Title"] = "ViewCart";
}

<h1>ViewCart</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.c_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.p_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.u_id)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.c_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.p_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.u_id)
            </td>
            <td>              
                @Html.ActionLink("Delete", "DeletefromCart", new {  id=item.c_id })
            </td>
        </tr>
}
    </tbody>
</table>
